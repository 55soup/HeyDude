<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/radius">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2" android:rowCount="3" >
        <ImageView
            android:id="@+id/profile"
            android:src="@drawable/ic_baseline_mic_none_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_rowSpan="2"/>
        <TextView
            android:id="@+id/txt_alarm_time"
            android:text="뀨뀨"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:id="@+id/txt_ment"
            android:text="오늘도 귀여운 하루입니다"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:id="@+id/txt_mess_time"
            android:text="10분 전"
            android:textSize="8sp"
            android:layout_columnSpan="2"
            android:layout_gravity="right" />
    </GridLayout>
    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow_item">
    </View>
</LinearLayout>
