<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:background="@drawable/radius"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:contentPadding="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2" android:rowCount="3" >
        <ImageView
            android:src="@drawable/ic_baseline_mic_none_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_rowSpan="2"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtAlarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에 일어나야하는"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtFriendUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="하진"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님을 위한 특별한 모닝콜을 선사해주세요!"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtMessTime"
            android:text="10분 전"
            android:textSize="10sp"
            android:layout_columnSpan="2"
            android:layout_gravity="right" />
    </GridLayout>
</androidx.cardview.widget.CardView>
