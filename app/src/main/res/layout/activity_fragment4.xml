<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mirim.hey_dude.Fragment4">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="330dp">
        <ImageView
            android:layout_width="410dp"
            android:layout_height="290dp"
            android:src="@drawable/gradient" />
        <ImageButton
            android:id="@+id/btnSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="#00000000"
            android:layout_gravity="right"
            android:layout_margin="15dp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal|bottom">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile_photo"
                android:backgroundTint="#ff0000" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnModify"
                app:fabCustomSize="27dp"
                app:maxImageSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:borderWidth="0dp"
                android:src="@drawable/ic_baseline_modify_24"
                android:layout_gravity="right|bottom"/>
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txtNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="w2128@e-mirim.hs.kr"
            android:textSize="10dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/txtMess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나 좀 깨워주라 애들아~" />

    </LinearLayout>


</LinearLayout>